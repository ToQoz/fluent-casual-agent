#!/usr/bin/env ruby

require "slop"
argv = ARGV.dup
slop = Slop.new(:strict => true, :help => true)
slop.banner "$ fluent-casual-agent [options]"
slop.on :c, :conf_file, "configuration file (default is config/config.rb)"

begin
  slop.parse!(argv)
rescue => e
  puts e
  exit!
end
options = slop.to_hash
options.delete(:help)
options[:conf_file] ||= "config/config.rb"

root = File.expand_path("../..", __FILE__)
$LOAD_PATH.unshift root
$LOAD_PATH.unshift File.join(root, 'lib')

require "fluent-casual-agent"
require options[:conf_file]

FluentCasualAgent.run
